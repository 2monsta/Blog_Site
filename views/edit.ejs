<% include partials/header %>
    <div class ="ui main text container segment">
        <div class="ui huge header">
            Edit <%= blogs.title %>
        </div>
        <!--added method override to this, other wise, it's pretty much like creating a new blog-->
        <form action="/blogs/<%= blogs._id %>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label>Title</label>
                <!--value key is used to pre populate the data-->
                <input type="text" name="blog[title]" value="<%= blogs.title %>">
            </div>
            
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blogs.image %>">
            </div>
            
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]"><%=blogs.body%></textarea>
            </div>

            <input class="ui violet inverted button" type="submit">
        </form>
    </div>

<% include partials/footer %>



